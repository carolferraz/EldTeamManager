@using TeamManager.Web.Models.SkillType
@model SkillTypeListViewModel

<h4>Cadastrar Tipo de Habilidade</h4>
<p class="fw-medium">Lista dos tipos de habilidades cadastradas</p>

<a class="btn btn-success" role="button" href="@Url.Action("New","SkillType")"><i class="fa-solid fa-plus"></i> Adicionar</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col" style="width: 10%">Id</th>
            <th scope="col" style="width: 70%">Nome</th>
            <th scope="col" style="width: 10%; text-align:center">Editar</th>
            <th scope="col" style="width: 10%; text-align:center">Excluir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var skilltype in Model.SkillTypes)
        {
            <tr>
                <th scope="row" class="align-middle">@skilltype.Id</th>
                <td class="align-middle">@skilltype.Name</td>
                <td class="align-middle" style="text-align: center">
                    <a class="btn btn-link" role="button" href="@Url.Action("Edit","Skilltype",new { id = skilltype.Id })">
                        <i class="fa-sharp fa-regular fa-pen-to-square"></i>
                    </a>
                </td>
                <td class="align-middle" style="text-align: center">
                    <a class="btn btn-link" role="button" href="@Url.Action("Delete","Skilltype",new { id = skilltype.Id })">
                        <i class="fa-sharp fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p class="fst-light">@Model.SkillTypes.Count() tipos de habilidades(s) cadastrada(s)</p>

